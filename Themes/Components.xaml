<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Themes/Styles/Default.xaml"/>
        <ResourceDictionary Source="/Themes/Styles/Views/Home.xaml"/>
        <ResourceDictionary Source="/Themes/Styles/Views/Login.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <SvgImageSource x:Key="Attachment" UriSource="/Themes/Icons/Attachment.svg"/>
    <SvgImageSource x:Key="Language" UriSource="/Themes/Icons/Language.svg" RasterizePixelHeight="48" RasterizePixelWidth="48"/>
    <SvgImageSource x:Key="Logo" UriSource="/Themes/Icons/Logo.svg"/>
    <SvgImageSource x:Key="LogoWithText" UriSource="/Themes/Icons/LogoWithText.svg"/>
    <ImageSource x:Key="Send">/Themes/Icons/Send.png</ImageSource>
    <SvgImageSource x:Key="User" UriSource="/Themes/Icons/User.svg"/>
    <SvgImageSource x:Key="Verified" UriSource="/Themes/Icons/Verified.svg"/>

</ResourceDictionary>
