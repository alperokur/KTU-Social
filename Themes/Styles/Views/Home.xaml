<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="/Themes/Styles/Default.xaml">

    <Style x:Key="ProfileText" BasedOn="{StaticResource TextBlock}" TargetType="TextBlock">
        <Setter Property="Padding" Value="0,4"/>
    </Style>

    <Style x:Key="Category" BasedOn="{StaticResource ButtonNonBorder}" TargetType="Button">
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Margin" Value="16,0"/>
        <Setter Property="Padding" Value="8,0"/>
    </Style>

    <Style x:Key="CommonStackPanel" TargetType="StackPanel">
        <Setter Property="Margin" Value="16,0,16,16"/>
    </Style>

    <Style x:Key="Reagent" TargetType="Grid">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="16,0"/>
    </Style>

</ResourceDictionary>
