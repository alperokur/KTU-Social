<Button x:ConnectionId='1'
    x:Class="KTU_Social.Controls.ChannelMessageButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KTU_Social.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Background="Transparent" CornerRadius="8" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                          >

    <StackPanel Margin="8">
        <StackPanel Orientation="Horizontal">
            <Border CornerRadius="12">
                <Image x:ConnectionId='6' Height="24" Width="24"                                               Stretch="UniformToFill"/>
            </Border>
            <TextBlock x:ConnectionId='3'                                          Style="{ThemeResource TextBlock}" Margin="8,0"/>
            <Image x:ConnectionId='4' x:Name="VerifiedIcon" d:Visibility="Visible" Height="12" Margin="-2,2,4,0" Source="{StaticResource Verified}" VerticalAlignment="Center" Visibility="Collapsed" Width="12"/>
            <TextBlock x:ConnectionId='5' Foreground="Orange"                          Style="{ThemeResource TextBlock}"/>
        </StackPanel>
        <TextBlock x:ConnectionId='2' HorizontalTextAlignment="Left"                         Style="{ThemeResource TextBlockWrap}" Margin="32,0" HorizontalAlignment="Left"/>
    </StackPanel>
</Button>

